    <Button
        android:id="@+id/search_sale_orderbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询"/>
    <ListView
        android:id="@+id/search_order_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"/>
